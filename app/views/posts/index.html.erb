<%= @user.name %><br>
<%= link_to 'New post', new_post_path %>
<br>
<% if @posts %>
  <% @posts.each do |post| %>
    <% if post.picture.attached? %>
      <%= link_to(post_path(post)) do %>
       <img src="<%= url_for(post.picture) %>" alt="<%= post.picture.filename %>">
      <% end %><br>
    <% end %>
    <%= post.description %><br>
  <% end %>
<% end %>
